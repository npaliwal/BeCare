<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:background="@drawable/login"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"

        android:layout_alignParentTop="true">


        <TextView android:layout_width="wrap_content"
            android:id="@+id/header_text"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#ffffff"
            android:layout_marginLeft="25dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal|center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_cntnr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        android:layout_below="@+id/header"

        android:visibility="visible">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="30dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"

            >

            <EditText android:layout_width="match_parent"
                android:id="@+id/et_username"
                android:layout_height="40dp"
                android:hint="Username"

                android:textColor="@color/white"
                android:paddingLeft="5dp"
                android:layout_marginTop="25dp"
                />

            <EditText android:layout_width="fill_parent"
                android:id="@+id/et_userpswd"
                android:layout_height="40dp"
                android:hint="password"

                android:paddingLeft="5dp"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:layout_marginTop="25dp"
                />


            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                >

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text="@string/login_register"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:text="|"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tv_forgot_pswd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:text="@string/login_forget"
                    android:textStyle="bold"

                    />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent"
        android:id="@+id/register_contnr"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:layout_below="@+id/login_cntnr"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/tv_already_registered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:text="@string/login_already_registered"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/et_reg_name"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="Username"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:layout_marginTop="30dp"/>

        <EditText android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="email"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:layout_marginTop="15dp"/>

        <EditText android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:hint="Profile Display Name"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:layout_marginTop="15dp"/>

        <Spinner
            android:id="@+id/sp_register_as"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#f3f3f3"
            android:paddingLeft="5dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Register as:"
            android:layout_marginTop="30dp"
            />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioButton android:id="@+id/radio_patient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/patient"
                android:onClick="onRadioButtonClicked"/>

            <RadioButton android:id="@+id/radio_doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doctor"
                android:layout_marginLeft="70dp"
                android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
    </LinearLayout>

    <Button android:layout_width="match_parent"
        android:id="@+id/btn_submit"
        android:layout_height="38dp"
        android:gravity="center|center_horizontal|center_vertical"
        android:layout_below="@+id/register_contnr"
        android:text="submit"
        android:textColor="#fff"
        android:textSize="13dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:background="@color/colorBlue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:layout_above="@+id/social_login_container">

        <View
            android:layout_width="0px"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/colorBlue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlue"
            android:padding="10dp"
            android:textStyle="bold"
            android:text="OR"/>
        <View
            android:layout_width="0px"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/colorBlue"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/social_login_container"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_above="@+id/tv_skip_registration">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_google"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"></View>

        <RelativeLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            >

            <Button
                android:id="@+id/button_fb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/com_facebook_button_background"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:text="Sign In"
                android:textStyle="bold"
                android:paddingLeft="35dp"
                />

            <ImageView
                android:id="@+id/icon_fb"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:src="@drawable/com_facebook_button_icon"
                android:elevation="5dp"
                />
        </RelativeLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/sign_in_facebook"
            style="@style/FacebookLoginButton"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:visibility="gone"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_skip_registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:gravity="center|center_horizontal"
        android:text="@string/login_skip"
        android:padding="10dp"
        android:textStyle="bold"
        />
</RelativeLayout>
