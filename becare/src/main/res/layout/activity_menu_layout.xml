<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"

        android:text="BeCare Wellness Tasks" />

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:rowCount="9"
        android:columnCount="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center">
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorAQUA"
            android:onClick="getArmElevation"
            android:text="Arm Elevation" />
        <TextView
            android:text=" "
            android:layout_height="10dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorLIME"
            android:onClick="getSnooker"
            android:text="Snooker" />
        <TextView
            android:text=" "
            android:layout_height="10dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorPINK"
            android:onClick="getTranscription"
            android:text="Transcription Test"/>
        <TextView
            android:text=" "
            android:layout_height="10dp"/>
        <Button
            android:id="@+id/start_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorLavender"
            android:onClick="getContrast"
            android:text="Contrast Sensitivity" />
        <TextView
            android:text=" "
            android:layout_height="10dp"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorMustard"
            android:onClick="getTimedWalk"
            android:text="Timed Walk"/>

    </GridLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Utility" />
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:background="@color/colorBlueberry"
        android:onClick="getTools"
        android:text="Tools" />

</LinearLayout>