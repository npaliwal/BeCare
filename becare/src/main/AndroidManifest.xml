<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.github.pocmo.sensordashboard">

    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application tools:replace="android:icon"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <activity
            android:name=".activities.StartingActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.github.pocmo.sensordashboard.activities.BallRectangleActivity"
            android:screenOrientation="portrait"
            android:label="@string/exercise_ring_rect">
        </activity>

        <activity
            android:name="com.github.pocmo.sensordashboard.activities.SnookerActivity"
            android:screenOrientation="portrait"
            android:label="@string/exercise_ring_rect">
        </activity>

        <activity
            android:name="com.github.pocmo.sensordashboard.activities.ContrastSensitivityActivity"
            android:screenOrientation="portrait"
            android:label="@string/exercise_contrast">
        </activity>

        <activity
            android:name="com.github.pocmo.sensordashboard.activities.TranscriptionTestActivity"
            android:screenOrientation="portrait"
            android:label="@string/exercise_transcription">
        </activity>

        <activity
            android:name="com.github.pocmo.sensordashboard.activities.ArmElevationActivity"
            android:screenOrientation="portrait"
            android:label="@string/exercise_arm_elevation">
        </activity>

        <activity
            android:name="com.github.pocmo.sensordashboard.activities.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/login">
        </activity>

        <activity
            android:name=".activities.UtilityActivity"
            android:screenOrientation="portrait"
            android:label="@string/menu_tools">
        </activity>

        <activity android:name=".activities.TimedWalkedActivity"
            android:screenOrientation="portrait"
            android:label="@string/exercise_timed_walk">

        </activity>
        <activity
            android:name=".activities.TwentyFiveStepsActivity"
            android:label="25 Steps Walking"
            android:parentActivityName=".activities.TimedWalkedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TimedWalkedActivity" />
        </activity>
        <activity
            android:name=".activities.SixMinutesActivity"
            android:label="Six Minutes Walking"
            android:parentActivityName=".activities.TimedWalkedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TimedWalkedActivity" />
        </activity>

        <activity
            android:name=".activities.UpAndGoActivity"
            android:label="Six Minutes Walking"
            android:parentActivityName=".activities.TimedWalkedActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.TimedWalkedActivity" />
        </activity>
        <service android:name=".network.DataUploadService" />

        <service android:name=".BecareSensorReceiverService">
            <intent-filter>
                <action
                    android:name="com.google.android.gms.wearable.BIND_LISTENER"/>
            </intent-filter>
        </service>
    </application>

</manifest>
