<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.StartingActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/tv_compatiblity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Awesome!!!"
        android:textColor="@color/green"
        android:gravity="center"
        android:textSize="24sp"
        android:typeface="monospace"/>

    <TextView
        android:id="@+id/tv_mobile_Sensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checking your phone sensors..."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_compatiblity"
        />

    <TextView
        android:id="@+id/tv_wear_Sensors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waiting for a wearable..."
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tv_mobile_Sensors"
        />


    <Button
        android:id="@+id/accelero_live_tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accelero live tracking"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:gravity="center|center_horizontal"
        android:layout_below="@+id/tv_wear_Sensors"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/gyro_live_tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gyroscope live tracking"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/accelero_live_tracking"
        android:visibility="gone"
        />
</RelativeLayout>
